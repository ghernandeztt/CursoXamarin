<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CursoXamarin.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout>
            <Label 
                Text="Recupera tu contraseña ingresando tu email"
                x:Name="emailLabel"
                HorizontalOptions="Center"/>
            <Entry
                Placeholder="Ingresa tu email"
                x:Name="emailEntry"/>
            <Label 
                Text="Ingresa el código enviado a tu correo"
                HorizontalOptions="Center"                
                x:Name="codeLabel"
                IsVisible="False"/>
            <Entry
                Placeholder="*****"
                IsPassword="true"
                x:Name="codeEntry"
                IsVisible="False"/>
            <Button 
                Text="Enviar"
                Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>